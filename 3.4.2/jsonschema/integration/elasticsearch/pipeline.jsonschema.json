{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.elastic.dev/package-spec/3.4.2/integration/elasticsearch/pipeline.jsonschema.json",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description of the pipeline.",
      "type": "string"
    },
    "on_failure": {
      "description": "List of processors to apply in case of failure.",
      "$ref": "#/definitions/processors"
    },
    "processors": {
      "description": "List of processors that conform the pipeline.",
      "$ref": "#/definitions/processors"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "processor": {
      "type": "object",
      "maxProperties": 1,
      "properties": {
        "append": {
          "type": "object"
        },
        "attachment": {
          "type": "object"
        },
        "bytes": {
          "type": "object"
        },
        "circle": {
          "type": "object"
        },
        "community_id": {
          "type": "object"
        },
        "convert": {
          "type": "object"
        },
        "csv": {
          "type": "object"
        },
        "date": {
          "type": "object"
        },
        "date_index_name": {
          "type": "object"
        },
        "dissect": {
          "type": "object"
        },
        "dot_expander": {
          "type": "object"
        },
        "drop": {
          "type": "object"
        },
        "fail": {
          "type": "object"
        },
        "fingerprint": {
          "type": "object"
        },
        "foreach": {
          "type": "object",
          "properties": {
            "processor": {
              "$ref": "#/definitions/processor"
            }
          }
        },
        "geoip": {
          "type": "object"
        },
        "grok": {
          "type": "object"
        },
        "gsub": {
          "type": "object"
        },
        "html_strip": {
          "type": "object"
        },
        "inference": {
          "type": "object"
        },
        "join": {
          "type": "object"
        },
        "json": {
          "type": "object"
        },
        "kv": {
          "type": "object"
        },
        "lowercase": {
          "type": "object"
        },
        "network_direction": {
          "type": "object"
        },
        "pipeline": {
          "type": "object"
        },
        "redact": {
          "type": "object"
        },
        "registered_domain": {
          "type": "object"
        },
        "remove": {
          "type": "object"
        },
        "rename": {
          "type": "object"
        },
        "script": {
          "type": "object"
        },
        "set": {
          "type": "object"
        },
        "sort": {
          "type": "object"
        },
        "split": {
          "type": "object"
        },
        "terminate": {
          "type": [
            "object",
            "null"
          ]
        },
        "trim": {
          "type": "object"
        },
        "uppercase": {
          "type": "object"
        },
        "uri_parts": {
          "type": "object"
        },
        "urldecode": {
          "type": "object"
        },
        "user_agent": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "processors": {
      "type": "array",
      "if": {
        "contains": {
          "required": [
            "rename"
          ],
          "properties": {
            "rename": {
              "properties": {
                "field": {
                  "const": "message"
                },
                "target_field": {
                  "const": "event.original"
                }
              }
            }
          }
        }
      },
      "then": {
        "allOf": [
          {
            "contains": {
              "required": [
                "rename"
              ],
              "properties": {
                "rename": {
                  "required": [
                    "if"
                  ],
                  "properties": {
                    "if": {
                      "const": "ctx.event?.original == null"
                    }
                  }
                }
              }
            }
          },
          {
            "contains": {
              "required": [
                "remove"
              ],
              "properties": {
                "remove": {
                  "required": [
                    "field",
                    "ignore_missing",
                    "if"
                  ],
                  "properties": {
                    "if": {
                      "const": "ctx.event?.original != null"
                    },
                    "field": {
                      "const": "message"
                    },
                    "ignore_missing": {
                      "const": true
                    }
                  }
                }
              }
            }
          }
        ]
      },
      "items": {
        "$ref": "#/definitions/processor"
      }
    }
  }
}
