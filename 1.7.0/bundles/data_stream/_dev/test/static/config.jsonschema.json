{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "skip": {
      "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~11.7.0~1data_stream~1_dev~1test~1skip.jsonschema.json/definitions/skip"
    }
  },
  "$defs": {
    "https://schemas.elastic.dev/package-spec/1.7.0/data_stream/_dev/test/skip.jsonschema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "additionalProperties": false,
      "definitions": {
        "skip": {
          "description": "If this test should be skipped, more information about why it was skipped.",
          "type": "object",
          "required": [
            "reason",
            "link"
          ],
          "properties": {
            "link": {
              "description": "Link to issue with more details about skipped test or to track re-enabling skipped test.",
              "type": "string",
              "example": "https://github.com/elastic/integrations/issues/520"
            },
            "reason": {
              "description": "Short explanation for why test has been skipped.",
              "type": "string",
              "example": "Flaky test"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
