{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "policy": {
      "description": "Configuration for policy tests",
      "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
    },
    "system": {
      "description": "Configuration for system tests",
      "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "https://schemas.elastic.dev/package-spec/3.2.0/integration/data_stream/_dev/test/config.jsonschema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "additionalProperties": false,
      "definitions": {
        "skip": {
          "description": "If this test should be skipped, more information about why it was skipped.",
          "type": "object",
          "required": [
            "reason",
            "link"
          ],
          "properties": {
            "link": {
              "description": "Link to issue with more details about skipped test or to track re-enabling skipped test.",
              "type": "string",
              "example": "https://github.com/elastic/integrations/issues/520"
            },
            "reason": {
              "description": "Short explanation for why test has been skipped.",
              "type": "string",
              "example": "Flaky test"
            }
          },
          "additionalProperties": false
        },
        "vars": {
          "description": "Variables defined for the test case.",
          "type": [
            "null",
            "object"
          ],
          "properties": {
            "data_stream.dataset": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9]+[a-zA-Z0-9\\._]*$"
            }
          }
        }
      }
    },
    "https://schemas.elastic.dev/package-spec/3.2.0/integration/_dev/test/config.jsonschema.json": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "asset": {
          "description": "Configuration for asset tests",
          "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
        },
        "pipeline": {
          "description": "Configuration for pipeline tests",
          "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
        },
        "policy": {
          "description": "Configuration for policy tests",
          "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
        },
        "static": {
          "description": "Configuration for static tests",
          "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
        },
        "system": {
          "description": "Configuration for system tests",
          "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1_dev~1test~1config.jsonschema.json/definitions/config_tests"
        }
      },
      "additionalProperties": false,
      "definitions": {
        "config_tests": {
          "type": "object",
          "properties": {
            "parallel": {
              "description": "Tests defined can be run in parallel (default true).",
              "default": false,
              "type": "boolean"
            },
            "skip": {
              "$ref": "#/$defs/https:~1~1schemas.elastic.dev~1package-spec~13.2.0~1integration~1data_stream~1_dev~1test~1config.jsonschema.json/definitions/skip"
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}
